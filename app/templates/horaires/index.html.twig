{% extends 'base.html.twig' %}

{% block title %}administation
{% endblock %}


{% block body %}

	<div class="container">
		<div class="row">
			{% include "espace_admin/_adminnav.html.twig" %}

			<main class="col-9 border border-secondary text-secondary p-2">
				<h1>Horaires</h1>

				<a href="{{ path('app_horaires_new') }}">Ajouter un nouvel horaire</a>

				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Jour</th>
							<th scope="col">Ouverture</th>
							<th scope="col">Fermeture</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for horaire in horaires %}
							<tr>
								<td>{{ horaire.jour }}</td>
								<td>{{ horaire.ouverture }}</td>
								<td>{{ horaire.fermeture }}</td>
								<td>
									<a href="{{ path('app_horaires_edit', {id: horaire.id}) }}">Modifier</a>
									<form action="{{ path('app_horaires_delete', {id: horaire.id}) }}" method="post" style="display:inline;">
										<input type="hidden" name="_method" value="DELETE">
										<button type="submit">Supprimer</button>
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>


			</main>
		</div>
	</div>

{% endblock %}
