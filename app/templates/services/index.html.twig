{% extends 'base.html.twig' %}

{% block title %}Services
{% endblock %}

{% block body %}


	<div class="container-fluid entete text-primary d-flex justify-content-center h-33">
		<div class="container bg-secondary title">
			<h1 class="text-center">Nos services</h1>
		</div>
	</div>


	<div class="d-flex flex-wrap flex-column justifiy-content-center">
		<div
			class="card d-flex flex-column flex-wrap justify-content-center mb-4">
			{# style="width: 50rem;  #}
			{% for service in services %}
				<div class="card-body d-flex align-items-center mx-auto p-2">
					<div>
						<h4 class="card-title p-5">{{service.nom}}</h4>
					</div>
					<div><img src="{{ asset('uploads/services/') ~ service.image}}" alt="{{service.nom}}" style="width: 20rem;"></div>
					<div>
						<p class="card-text p-5 text-center">{{service.description}}</p>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>
{% endblock %}
