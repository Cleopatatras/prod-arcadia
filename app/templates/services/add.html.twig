{% extends 'base.html.twig' %}

{% block title %}Ajout service
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			{% include "espace_admin/_adminnav.html.twig" %}

			<main class="col-9 border border-secondary text-secondary p-2">
				<h1>Ajouter un service</h1>

				{{ form_start(serviceForm) }}
				<p style="p-2">{{ form_row(serviceForm.nom) }}</p>
				<p style="p-2">{{ form_row(serviceForm.description) }}</p>
				<p style="p-2">{{ form_row(serviceForm.image) }}</p>

				<button class="btn btn-secondary text-primary" type=" submit">Ajouter</button>
				{{ form_end(serviceForm) }}

			</main>
		</div>
	</div>


{% endblock %}
