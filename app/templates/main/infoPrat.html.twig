{% extends 'base.html.twig' %}

{% block title %}Infos pratiques
{% endblock %}

{% block body %}
	<h1 class="text-center">Informations pratiques</h1>
	<div class="container d-flex align-item-center flex-column text-bg-blue">
		<div class="horaires align-item-center mb-5 mt-5">
			<h2>Nos horaires</h2>
			<table class="table text-bg-blue">
				<thead>
					<tr>
						<th>Jour</th>
						<th>Ouverture</th>
						<th>Fermeture</th>
					</tr>
				</thead>
				<tbody>
					{% for horaire in horaires %}
						<tr>
							<td>{{ horaire.jour }}</td>
							<td>{{ horaire.ouverture }}</td>
							<td>{{ horaire.fermeture }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
		<div class="carto">
			<h2>Venir nous voir :</h2>
			<div class="map align-item-center">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8977.050539378422!2d-2.1356823414528554!3d48.01577525654342!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x480fada994e3bdbd%3A0xbd56c76be3e8f06a!2sBroc%C3%A9liande%2C%20la%20Porte%20des%20Secrets!5e0!3m2!1sfr!2sfr!4v1729951658206!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>


{% endblock %}
