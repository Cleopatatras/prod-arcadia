{% extends 'base.html.twig' %}

{% block title %}ajout habitat
{% endblock %}

{% block importmap %}
	{{ importmap(['app', 'add-habitat']) }}
{% endblock %}
{% block body %}

	<div class="container contact bg-secondary text-primary w20">

		<h1>Ajouter un habitat</h1>

		{{ form_start(habitatForm) }}
		<p style="p-2">
			{{ form_row(habitatForm.nom) }}</p>
		<p style="p-2">{{ form_row(habitatForm.description) }}</p>
		<p style="p-2">{{ form_row(habitatForm.image) }}</p>
		<div class="preview">
			<img src="" alt="" width="300">
		</div>

		<button class="btn btn-secondary text-primary" type=" submit">Ajouter</button>

		{{ form_end(habitatForm) }}

	</div>

{% endblock %}
